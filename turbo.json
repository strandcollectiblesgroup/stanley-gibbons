{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NEXT_PUBLIC_STAGE",
    "STAGE",
    "PUBLIC_STORE_DOMAIN",
    "PUBLIC_STOREFRONT_API_TOKEN",
    "PRIVATE_STOREFRONT_API_TOKEN",
    "PUBLIC_CUSTOMER_ACCOUNT_API_URL",
    "SESSION_SECRET",
    "PUBLIC_STOREFRONT_ID"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
